<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="replceMethod" class="edu.zjnu.spring.ioc.changemehtod.MyMethodReplacer"/>

    <bean name="testChangeMethod" class="edu.zjnu.spring.ioc.changemehtod.TestChangeMethod">
        <replaced-method name="change" replacer="replceMethod"/>
    </bean>

</beans>