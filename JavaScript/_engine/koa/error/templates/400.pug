extends /layouts/main

block append variables
  - let headTitle = error.title || t('error.400.title');
  - let layout_header_class = "main__header_center"
  - var themeEnabled = true

block content
  +b.error
    +e('h1').type= headTitle
    +e.code 400

    if error.info
      +e.text
        != error.info

    if error.errors
      +e.text
        dl
          each value, key in error.errors
            dt= key
            dd= value.message
